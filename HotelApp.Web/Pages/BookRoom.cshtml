@page
@model HotelApp.Web.Pages.BookRoomModel
@{
    ViewData["Title"] = "Book A Room";
}

<h1>Book A Room</h1>

<h2>@Model.RoomType.Title</h2>

<p>
    @Model.RoomType.Description
</p>

<form method="post" >
    <div class="row justify-content-center mt-5">

        <div class="col-4">
            <div class="form-group">
                <label asp-for="@Model.FirstName"></label>
                <input asp-for="@Model.FirstName" placeholder="Enter First Name" />
            </div>
        </div>

        <div class="col-4">
            <div class="form-group">
                <label asp-for="@Model.LastName"></label>
                <input asp-for="@Model.LastName" placeholder="Enter Last Name" />
            </div>
        </div>

        <div class="col-4">
            <button type="submit" class="btn btn-primary">Book</button>
        </div>

    </div>


</form>